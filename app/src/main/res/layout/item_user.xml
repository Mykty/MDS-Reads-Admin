<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    android:orientation="horizontal"
    android:padding="10dp"
    android:theme="@style/Hei2">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/person_photo"
        android:transitionName="imageTransition"
        card_view:civ_border_color="@color/description"
        card_view:civ_border_width="3dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:id="@+id/realL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/qbold"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:text="Name"
            android:textColor="@color/bronzing"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/bookCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quick"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/album_title_padding"
            android:paddingBottom="5dp"
            android:text="Books: 1"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/userPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/ralewaybold"
            android:gravity="center_horizontal"
            android:text="Point: 0"
            android:textColor="@color/bronze2"
            android:textSize="10dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/userRating"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/quick"
        android:layout_weight="3"
        android:text="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30dp" />

</LinearLayout>