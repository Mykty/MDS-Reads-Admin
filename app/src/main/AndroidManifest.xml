<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kz.incubator.sdcl.club1">

    <uses-feature android:name="android.hardware.wifi" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".authentications.LoginByPhoneActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MenuActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".groups_menu.GroupUsersActivity"/>
        <activity android:name=".authentications.LoginByEmailPage"/>
        <activity android:name=".user.MyCabinetActivity"/>
        <activity android:name=".authentications.VerifyCodeSentActivity"/>
        <activity android:name=".users_list_menu.UserProfileActivity"/>
        <activity android:name=".authentications.AuthenPage" />
        <activity
            android:name=".users_list_menu.AddUser"
            android:launchMode="singleInstance"
            android:parentActivityName=".MenuActivity" />
        <activity android:name=".book_list_menu.ScannerActivity" />
        <activity android:name=".book_list_menu.OneBookAcvitiy" />
        <activity
            android:name=".book_list_menu.AddBook"
            android:launchMode="singleInstance"
            android:parentActivityName=".MenuActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".book_list_menu.EditBook"
            android:launchMode="singleInstance"
            android:parentActivityName=".MenuActivity" />
        <activity
            android:name=".users_list_menu.EditUser"
            android:launchMode="singleInstance"
            android:parentActivityName=".MenuActivity" />
    </application>

</manifest>